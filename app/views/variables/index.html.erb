<div class="container mt-lg">
<h4>All Variables</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @variables.each do |variable| %>
      <tr>
        <td><%= variable.description %></td>
        <td><%= variable.value %></td>
        <td>
        <%= link_to 'Change Value', edit_variable_path(variable), class:"btn btn-primary btn-sm" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>