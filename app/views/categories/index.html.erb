<div class="container">
  
  <%= bootstrap_form_for(Category.new) do |form| %>
    <div class="row mt-4">
      <div class="col-md-12">
        <h3 class="text-center">Add New Category</h3>
      </div>
      </div>
      <div class="row">
      <div class="col-md-9">
        <div class="field">
          <%= form.text_field :name,placeholder:"Category Name", id: :category_name, hide_label: true %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="actions">
          <%= form.submit "Create Category", class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  
  <% end %>


  <h2>All Categories</h2>

  <table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'List SubCategories', category_path(category), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, class:"btn btn-primary btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



</div>