<div class="container mt-lg">
<h3>
  <strong>Category Name:</strong>
  <%= @category.name %>
</h3>
  
  <%= bootstrap_form_for(Subcategory.new) do |form| %>
   <div class="row">
      <div class="col-md-12">
        <h4>Add New Subcategory</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-9">
        <div class="field">
          <%= form.text_field :name,placeholder:"Subcategory Name", id: :subcategory_name, hide_label: true %>
          <%= form.hidden_field :category_id,value: @category.id, id: :category_id %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="actions">
          <%= form.submit "Create Subcategory", class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

<h4>Listing Subcategories</h4>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @category.subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.name %></td>
        <td><%= link_to 'Show', subcategory, class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_subcategory_path(subcategory), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', subcategory, method: :delete, class:"btn btn-primary btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center mb-4">
<%= link_to 'Edit', edit_category_path(@category), class:"btn btn-primary btn-sm" %> |
<%= link_to 'Back', categories_path, class:"btn btn-primary btn-sm" %>
</div>
</div>