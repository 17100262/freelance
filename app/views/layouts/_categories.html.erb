<div class="container-fluid dash-container" style="padding:0">
  <ul class="dashnav">
    <li><%= ((link_to "All Jobs", main_app.jobs_path,class: "active") if @status == "alljobs") || (link_to "All Jobs", main_app.jobs_path)  %></li>
    <% Category.all.each do |category| %>
      <li><%= ((link_to category.name, main_app.jobs_path(category: category.name),class:"active") if @status == category.name) || (link_to category.name, main_app.jobs_path(category: category.name)) %></li>
    <% end %>
  </ul>
</div>