<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>Subcategories</h2>
    </div>
    <div class="col-md-2 text-right">
      <%= link_to 'New Subcategory', new_subcategory_path, class:"btn btn-primary mb-3" %>
    </div>
  </div>
  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @subcategories.each do |subcategory| %>
        <tr>
          <td><%= subcategory.name %></td>
          <td><%= subcategory.category %></td>
          <td><%= link_to 'Show', subcategory, class:"btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_subcategory_path(subcategory), class:"btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Destroy', subcategory, method: :delete, class:"btn btn-primary btn-sm", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
